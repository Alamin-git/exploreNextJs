{
   "compilerOptions": {
      "target": "es5",
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "noEmit": true,
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "bundler",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "incremental": true,
      "plugins": [
         {
            "name": "next"
         }
      ],
      "paths": {
         "@/*": ["./src/*"]
      }
   },
   "include": [
      "src/app/(with-layout)/blogs/page.jsx",
      "next-env.d.ts",
      "**/*.ts",
      "**/*.tsx",
      ".next/types/**/*.ts",
      "src/app/(with-layout)/blogs/[...segments]/page.jsx",
      "src/app/(with-layout)/blogs/[id]/page.jsx",
      "src/app/(with-layout)/layout.jsx",
      "src/app/dashboard/layout.jsx",
      "src/components/NavLink.jsx"
   ],
   "exclude": ["node_modules"]
}
